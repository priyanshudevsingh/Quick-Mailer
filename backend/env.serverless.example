# Serverless Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-api-gateway-url.amazonaws.com/api/auth/google/callback

# Frontend URL (Vercel deployment)
FRONTEND_URL=https://your-app.vercel.app

# AWS Configuration
# Note: AWS_REGION is automatically provided by Lambda, don't set it manually
S3_BUCKET=your-quick-mailer-attachments-bucket

# Optional: Customize Lambda settings
NODE_ENV=production
